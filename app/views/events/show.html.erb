<%# app/views/events/show.html.erb %>
<!DOCTYPE html>
<html>
<head>
  <title><%= @event.title %> - SalsaSpot</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= csrf_meta_tags %>

  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />

  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body { font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif; background: #f9fafb; }

    .header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 2rem 1rem;
    }
    .header a { color: white; text-decoration: none; }

    .container { max-width: 1200px; margin: 0 auto; padding: 2rem; }

    .event-header {
      background: white;
      border-radius: 1rem;
      padding: 2rem;
      margin-bottom: 2rem;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    .event-title { font-size: 2rem; font-weight: 700; margin-bottom: 1rem; }
    .event-meta {
      display: flex;
      gap: 2rem;
      flex-wrap: wrap;
      font-size: 1.1rem;
      color: #6b7280;
      margin-bottom: 1.5rem;
    }
    .event-meta span { display: flex; align-items: center; gap: 0.5rem; }

    .grid { display: grid; grid-template-columns: 2fr 1fr; gap: 2rem; }
    @media (max-width: 960px) { .grid { grid-template-columns: 1fr; } }

    .section {
      background: white;
      border-radius: 1rem;
      padding: 2rem;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      margin-bottom: 2rem;
    }
    .section h2 { margin-bottom: 1rem; font-size: 1.5rem; }

    .map-container { height: 400px; border-radius: 0.5rem; overflow: hidden; }

    .cta-btn {
      display: inline-block;
      background: #667eea;
      color: white;
      padding: 1rem 2rem;
      border-radius: 0.5rem;
      text-decoration: none;
      font-weight: 600;
      margin-top: 1rem;
    }
    .cta-btn:hover { background: #5568d3; }

    .similar-events {
      display: grid;
      gap: 1rem;
    }
    .similar-card {
      padding: 1rem;
      border: 1px solid #e5e7eb;
      border-radius: 0.5rem;
      text-decoration: none;
      color: inherit;
    }
    .similar-card:hover { background: #f9fafb; }
  </style>
</head>
<body>
  <div class="header">
    <%= link_to "â† Retour Ã  la carte", events_path %>
  </div>

  <div class="container">
    <div class="event-header">
      <h1 class="event-title"><%= @event.title %></h1>

      <div class="event-meta">
        <span>ğŸ“… <%= l(@event.starts_at, format: :long) %></span>
        <span>ğŸ“ <%= @event.venue_name %>, <%= @event.city %></span>
        <span><%= @event.price_display %></span>
        <span><%= @event.level_display %></span>
      </div>

      <div class="event-meta">
        <% @event.dance_styles.each do |style| %>
          <span style="background: #667eea; color: white; padding: 0.25rem 0.75rem; border-radius: 1rem; font-size: 0.9rem;">
            <%= style.capitalize %>
          </span>
        <% end %>

        <% if @event.has_lessons %>
          <span style="background: #10b981; color: white; padding: 0.25rem 0.75rem; border-radius: 1rem; font-size: 0.9rem;">
            ğŸ“š Cours inclus <%= "Ã  #{@event.lessons_time}" if @event.lessons_time %>
          </span>
        <% end %>
      </div>
    </div>

    <div class="grid">
      <div>
        <% if @event.description.present? %>
          <div class="section">
            <h2>ğŸ“ Description</h2>
            <p style="line-height: 1.6; white-space: pre-wrap;"><%= @event.description %></p>
          </div>
        <% end %>

        <div class="section">
          <h2>ğŸ“ Lieu</h2>
          <p style="font-weight: 600; margin-bottom: 0.5rem;"><%= @event.venue_name %></p>
          <p style="color: #6b7280;"><%= @event.full_address %></p>

          <% if @event.latitude && @event.longitude %>
            <div class="map-container" style="margin-top: 1rem;">
              <div id="detail-map" style="height: 100%;"></div>
            </div>
          <% end %>
        </div>
      </div>

      <div>
        <div class="section">
          <h2>â„¹ï¸ Infos pratiques</h2>

          <% if @event.organizer_name.present? %>
            <p style="margin-bottom: 0.5rem;">
              <strong>Organisateur :</strong> <%= @event.organizer_name %>
            </p>
          <% end %>

          <% if @event.phone.present? %>
            <p style="margin-bottom: 0.5rem;">
              <strong>ğŸ“ TÃ©lÃ©phone :</strong> <a href="tel:<%= @event.phone %>"><%= @event.phone %></a>
            </p>
          <% end %>

          <% if @event.website.present? %>
            <%= link_to "ğŸŒ Site web", @event.website, target: "_blank", class: "cta-btn", style: "display: block; text-align: center;" %>
          <% end %>

          <% if @event.facebook_url.present? %>
            <%= link_to "ğŸ‘¥ Ã‰vÃ©nement Facebook", @event.facebook_url, target: "_blank", class: "cta-btn", style: "display: block; text-align: center; margin-top: 0.5rem;" %>
          <% end %>

          <% if @event.ticket_url.present? %>
            <%= link_to "ğŸŸï¸ RÃ©server ma place", @event.ticket_url, target: "_blank", class: "cta-btn", style: "display: block; text-align: center; margin-top: 0.5rem; background: #10b981;" %>
          <% end %>
        </div>

        <% if @similar_events.any? %>
          <div class="section">
            <h2>ğŸ”¥ Autres soirÃ©es Ã  <%= @event.city %></h2>
            <div class="similar-events">
              <% @similar_events.each do |event| %>
                <%= link_to event_path(event), class: "similar-card" do %>
                  <strong><%= event.title %></strong><br>
                  <span style="color: #6b7280; font-size: 0.9rem;">
                    <%= l(event.starts_at, format: :short) %> Â· <%= event.price_display %>
                  </span>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
  <script>
    <% if @event.latitude && @event.longitude %>
      const detailMap = L.map('detail-map').setView([<%= @event.latitude %>, <%= @event.longitude %>], 15);

      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: 'Â© OpenStreetMap'
      }).addTo(detailMap);

      L.marker([<%= @event.latitude %>, <%= @event.longitude %>])
        .addTo(detailMap)
        .bindPopup('<strong><%= @event.venue_name %></strong>').openPopup();
    <% end %>
  </script>
</body>
</html>
