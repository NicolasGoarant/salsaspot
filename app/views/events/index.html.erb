  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

  <script>
    const map = L.map('map', { zoomControl: false }).setView([46.603354, 1.888334], 6);

    // Tuiles OpenStreetMap standard (affiche en fran√ßais pour la France)
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '¬© <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors',
      maxZoom: 19
    }).addTo(map);

    const markersLayer = L.layerGroup().addTo(map);
    const userLayer = L.layerGroup().addTo(map);

    let allEvents = [];
    fetch('/events.json')
      .then(r => r.json())
      .then(events => {
        allEvents = events;
        renderMarkers(events);
      });

    // Variable globale pour le filtre actif
    let activeFilter = null;

    function renderMarkers(events) {
      markersLayer.clearLayers();

      events.forEach(event => {
        if (!event.latitude || !event.longitude) return;

        const color = event.is_free ? '#4CAF50' : '#ff6b35';

        // Prioriser le style filtr√©, sinon prendre le premier
        let emoji;
        if (activeFilter && event.dance_styles.includes(activeFilter)) {
          // Si un filtre est actif ET l'√©v√©nement contient ce style, utiliser son emoji
          emoji = activeFilter === 'salsa' ? 'üíÉ' :
                  activeFilter === 'bachata' ? 'üï∫' :
                  activeFilter === 'kizomba' ? '‚ù§Ô∏è' : 'üéµ';
        } else {
          // Sinon, ordre de priorit√© par d√©faut
          emoji = event.dance_styles.includes('salsa') ? 'üíÉ' :
                  event.dance_styles.includes('bachata') ? 'üï∫' :
                  event.dance_styles.includes('kizomba') ? '‚ù§Ô∏è' : 'üéµ';
        }

        const icon = L.divIcon({
          html: `
            <div style="
              background: ${color};
              color: white;
              width: 50px;
              height: 50px;
              display: flex;
              align-items: center;
              justify-content: center;
              border-radius: 50%;
              font-size: 24px;
              box-shadow: 0 4px 16px rgba(0,0,0,0.25);
              border: 3px solid white;
              cursor: pointer;
              transition: transform 0.2s;
            " onmouseover="this.style.transform='scale(1.1)'" onmouseout="this.style.transform='scale(1)'">
              ${emoji}
            </div>
          `,
          className: 'custom-marker',
          iconSize: [50, 50],
          iconAnchor: [25, 50]
        });

        L.marker([event.latitude, event.longitude], { icon })
          .bindPopup(`
            <div style="min-width: 260px; font-family: 'DM Sans', sans-serif;">
              ${event.photo_url ? `
                <div style="
                  width: 100%;
                  height: 140px;
                  background-image: url(${event.photo_url});
                  background-size: cover;
                  background-position: center top;
                  border-radius: 8px;
                  margin-bottom: 12px;
                "></div>
              ` : ''}
              <strong style="font-size: 1.125rem; display: block; margin-bottom: 10px; color: #1a1a1a; line-height: 1.3;">${event.title}</strong>
              <div style="color: #666; margin-bottom: 6px; font-size: 0.9375rem;">
                <span style="margin-right: 8px;">üìç</span>${event.venue_name || event.city}
              </div>
              <div style="color: #666; margin-bottom: 14px; font-size: 0.9375rem;">
                <span style="margin-right: 8px;">üí∞</span>${event.price_display}
              </div>
              <a href="/events/${event.slug}" style="
                display: inline-block;
                background: linear-gradient(135deg, #ff6b35, #f7931e);
                color: white;
                padding: 10px 20px;
                border-radius: 25px;
                text-decoration: none;
                font-weight: 600;
                font-size: 0.9375rem;
                box-shadow: 0 2px 8px rgba(255, 107, 53, 0.3);
              ">Voir d√©tails ‚Üí</a>
            </div>
          `)
          .addTo(markersLayer);
      });
    }

    // G√©olocalisation
    let watchId = null;
    document.getElementById('locate-btn').addEventListener('click', () => {
      if (watchId) {
        navigator.geolocation.clearWatch(watchId);
        watchId = null;
        userLayer.clearLayers();
        document.getElementById('locate-btn').textContent = 'üìç';
        return;
      }

      if ('geolocation' in navigator) {
        document.getElementById('locate-btn').textContent = '‚è≥';

        navigator.geolocation.getCurrentPosition(pos => {
          const { latitude, longitude } = pos.coords;

          userLayer.clearLayers();
          L.circleMarker([latitude, longitude], {
            radius: 10,
            color: '#ffffff',
            fillColor: '#1976D2',
            fillOpacity: 1,
            weight: 4
          }).addTo(userLayer);

          map.flyTo([latitude, longitude], 13);
          document.getElementById('locate-btn').textContent = 'üõë';
        }, () => {
          alert('Impossible de te localiser');
          document.getElementById('locate-btn').textContent = 'üìç';
        });
      }
    });

    // Filtres
    document.querySelectorAll('.filter-chip').forEach(chip => {
      chip.addEventListener('click', () => {
        document.querySelectorAll('.filter-chip').forEach(c => c.classList.remove('active'));
        chip.classList.add('active');

        const style = chip.dataset.style;
        const free = chip.dataset.free;
        const lessons = chip.dataset.lessons;

        // Sauvegarder le filtre actif pour les markers
        activeFilter = style || null;

        let filtered = allEvents;

        if (style) filtered = filtered.filter(e => e.dance_styles.includes(style));
        if (free) filtered = filtered.filter(e => e.is_free);
        if (lessons) filtered = filtered.filter(e => e.has_lessons);

        renderMarkers(filtered);
      });
    });

    // Interaction carte ‚Üî liste : Clic sur card ‚Üí zoom carte
    document.querySelectorAll('.event-card').forEach(card => {
      card.addEventListener('click', (e) => {
        // Ne pas trigger si on clique sur le lien "Voir d√©tails"
        if (e.target.closest('.event-cta')) return;

        const lat = parseFloat(card.dataset.lat);
        const lng = parseFloat(card.dataset.lng);

        if (lat && lng) {
          map.flyTo([lat, lng], 15, {
            duration: 1.5
          });

          // Highlight visuel de la card
          document.querySelectorAll('.event-card').forEach(c => c.classList.remove('highlighted'));
          card.classList.add('highlighted');
        }
      });
    });

    // Burger menu mobile
    const burgerBtn = document.getElementById('burger-btn');
    const mobileMenu = document.getElementById('mobile-menu');

    if (burgerBtn && mobileMenu) {
      burgerBtn.addEventListener('click', () => {
        burgerBtn.classList.toggle('active');
        mobileMenu.classList.toggle('active');
      });

      // Fermer le menu si on clique sur un lien
      document.querySelectorAll('.mobile-menu-link').forEach(link => {
        link.addEventListener('click', () => {
          burgerBtn.classList.remove('active');
          mobileMenu.classList.remove('active');
        });
      });

      // Fermer le menu si on clique en dehors
      document.addEventListener('click', (e) => {
        if (!burgerBtn.contains(e.target) && !mobileMenu.contains(e.target)) {
          burgerBtn.classList.remove('active');
          mobileMenu.classList.remove('active');
        }
      });
    }
  </script>
