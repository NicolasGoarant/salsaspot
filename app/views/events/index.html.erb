<%# app/views/events/index.html.erb - VERSION CLAIRE ET CHALEUREUSE %>
<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>SalsaSpot ‚Äî Trouve ta soir√©e latino ce soir üî•</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&family=Bebas+Neue&display=swap" rel="stylesheet">

  <style>
    :root {
      --primary: #ff6b35;
      --primary-glow: rgba(255, 107, 53, 0.3);
      --secondary: #f7931e;
      --accent: #e63946;
      --bg-light: #fafafa;
      --bg-card: #ffffff;
      --bg-elevated: #f5f5f5;
      --text-primary: #1a1a1a;
      --text-secondary: #666666;
      --border: rgba(0, 0, 0, 0.1);
      --shadow: rgba(0, 0, 0, 0.08);
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }

    html, body { height: 100%; overflow: hidden; }

    body {
      font-family: 'DM Sans', sans-serif;
      background: var(--bg-light);
      color: var(--text-primary);
      display: flex;
      flex-direction: column;
    }

    /* NAVBAR */
    .navbar {
      background: var(--bg-card);
      border-bottom: 1px solid var(--border);
      padding: 1rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-shrink: 0;
      box-shadow: 0 2px 8px var(--shadow);
      position: relative;
      z-index: 100;
    }

    .navbar-brand {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      text-decoration: none;
    }

    .logo {
      font-family: 'Bebas Neue', sans-serif;
      font-size: 1.75rem;
      letter-spacing: 0.05em;
      background: linear-gradient(135deg, var(--primary), var(--secondary));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .tagline {
      color: var(--text-secondary);
      font-size: 0.875rem;
    }

    .navbar-cta {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.75rem 1.5rem;
      background: linear-gradient(135deg, var(--primary), var(--secondary));
      color: white;
      text-decoration: none;
      border-radius: 2rem;
      font-weight: 600;
      transition: all 0.3s;
      box-shadow: 0 4px 12px var(--primary-glow);
    }

    .navbar-cta:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px var(--primary-glow);
    }

    .discover-link {
      color: var(--text-secondary);
      text-decoration: none;
      font-weight: 500;
      font-size: 0.9375rem;
      transition: color 0.2s;
    }

    .discover-link:hover {
      color: var(--primary);
    }

    .navbar-actions {
      display: flex;
      gap: 1rem;
      align-items: center;
    }

    /* BURGER MENU (cach√© sur desktop) */
    .burger-menu {
      display: none;
      flex-direction: column;
      gap: 4px;
      cursor: pointer;
      padding: 0.5rem;
      background: none;
      border: none;
    }

    .burger-menu span {
      width: 24px;
      height: 3px;
      background: var(--primary);
      border-radius: 2px;
      transition: all 0.3s;
    }

    .burger-menu.active span:nth-child(1) {
      transform: rotate(45deg) translate(6px, 6px);
    }

    .burger-menu.active span:nth-child(2) {
      opacity: 0;
    }

    .burger-menu.active span:nth-child(3) {
      transform: rotate(-45deg) translate(6px, -6px);
    }

    /* Menu mobile d√©roulant */
    .mobile-menu {
      display: none;
      position: absolute;
      top: 100%; /* Juste en dessous de la navbar */
      left: 0;
      right: 0;
      background: var(--bg-card);
      border-bottom: 1px solid var(--border);
      box-shadow: 0 4px 12px var(--shadow);
      z-index: 1000;
      animation: slideDown 0.3s ease-out;
    }

    @keyframes slideDown {
      from {
        opacity: 0;
        transform: translateY(-10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .mobile-menu.active {
      display: block;
    }

    .mobile-menu-content {
      padding: 1rem;
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }

    .mobile-menu-link {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.875rem 1rem;
      background: var(--bg-elevated);
      border-radius: 0.75rem;
      text-decoration: none;
      color: var(--text-primary);
      font-weight: 500;
      font-size: 0.9375rem;
      transition: all 0.2s;
      border: 1px solid transparent;
    }

    .mobile-menu-link:hover {
      background: white;
      border-color: var(--primary);
      transform: translateX(4px);
    }

    .mobile-menu-link.primary {
      background: linear-gradient(135deg, var(--primary), var(--secondary));
      color: white;
      box-shadow: 0 2px 8px var(--primary-glow);
    }

    .mobile-menu-link.primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 12px var(--primary-glow);
    }

    /* FILTRES */
    .filters {
      background: var(--bg-card);
      border-bottom: 1px solid var(--border);
      padding: 1rem;
      flex-shrink: 0;
      box-shadow: 0 2px 8px var(--shadow);
    }

    .filters-container {
      display: flex;
      gap: 0.75rem;
      justify-content: center;
      flex-wrap: wrap;
    }

    .filter-chip {
      padding: 0.625rem 1.25rem;
      background: var(--bg-elevated);
      border: 1px solid var(--border);
      border-radius: 2rem;
      font-size: 0.875rem;
      font-weight: 500;
      color: var(--text-secondary);
      cursor: pointer;
      transition: all 0.3s;
      white-space: nowrap;
    }

    .filter-chip:hover {
      background: #e8e8e8;
      border-color: var(--primary);
    }

    .filter-chip.active {
      background: linear-gradient(135deg, var(--primary), var(--secondary));
      border-color: transparent;
      color: white;
      box-shadow: 0 4px 12px var(--primary-glow);
    }

    /* MAIN LAYOUT */
    .main-container {
      display: grid;
      grid-template-columns: 1fr 1fr;
      flex: 1;
      overflow: hidden;
    }

    /* CARTE */
    .map-section {
      position: relative;
      background: #f5f5f5;
      border-right: 1px solid var(--border);
    }

    #map {
      width: 100%;
      height: 100%;
    }

    .map-controls {
      position: absolute;
      bottom: 1.5rem;
      right: 1.5rem;
      z-index: 1000;
    }

    .map-btn {
      width: 56px;
      height: 56px;
      background: white;
      border: 1px solid var(--border);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.5rem;
      cursor: pointer;
      transition: all 0.3s;
      box-shadow: 0 4px 12px var(--shadow);
    }

    .map-btn:hover {
      background: var(--bg-elevated);
      transform: scale(1.05);
      box-shadow: 0 6px 20px var(--shadow);
    }

    /* LISTE */
    .events-section {
      background: var(--bg-light);
      overflow-y: auto;
      padding: 2rem;
    }

    .events-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 1.5rem;
      padding-bottom: 1rem;
      border-bottom: 2px solid var(--primary);
    }

    .events-header h2 {
      font-family: 'Bebas Neue', sans-serif;
      font-size: 2rem;
      letter-spacing: 0.05em;
      color: var(--text-primary);
    }

    .events-count {
      font-size: 0.875rem;
      font-weight: 600;
      color: var(--text-secondary);
      background: var(--bg-card);
      padding: 0.5rem 1rem;
      border-radius: 2rem;
      border: 1px solid var(--border);
    }

    .events-grid {
      display: grid;
      gap: 1.5rem;
    }

    /* CARTE √âV√âNEMENT */
    .event-card {
      background: var(--bg-card);
      border: 1px solid var(--border);
      border-radius: 1rem;
      padding: 0; /* Retirer le padding pour le layout horizontal */
      transition: all 0.3s;
      cursor: pointer;
      position: relative;
      overflow: hidden;
      box-shadow: 0 2px 8px var(--shadow);
      display: flex; /* Layout horizontal */
      flex-direction: row;
    }

    .event-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 3px;
      background: linear-gradient(90deg, var(--primary), var(--secondary));
      transform: scaleX(0);
      transition: transform 0.3s;
    }

    .event-card:hover {
      border-color: var(--primary);
      transform: translateY(-4px);
      box-shadow: 0 8px 24px var(--shadow);
    }

    .event-card:hover::before {
      transform: scaleX(1);
    }

    .event-card.highlighted {
      border-color: var(--primary);
      box-shadow: 0 0 0 3px var(--primary-glow);
    }

    /* Zone gauche - Photo + Description */
    .event-left {
      flex-shrink: 0;
      width: 280px;
      display: flex;
      flex-direction: column;
    }

    .event-image {
      width: 100%;
      height: 200px;
      border-radius: 1rem 0 0 0;
      background-size: cover;
      background-position: center;
      position: relative;
      overflow: hidden;
    }

    .event-image::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      height: 50%;
      background: linear-gradient(to top, rgba(0,0,0,0.4), transparent);
    }

    .event-placeholder {
      background: linear-gradient(135deg, var(--primary), var(--secondary));
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 3rem;
    }

    .event-description-left {
      flex: 1;
      padding: 1rem;
      font-size: 0.875rem;
      line-height: 1.5;
      color: var(--text-secondary);
      background: var(--bg-elevated);
      border-radius: 0 0 0 1rem;
    }

    /* Contenu de la card - c√¥t√© droit */
    .event-content {
      flex: 1;
      padding: 1.5rem;
      display: flex;
      flex-direction: column;
    }

    .event-title {
      font-size: 1.25rem;
      font-weight: 700;
      line-height: 1.3;
      margin-bottom: 0.75rem;
      color: var(--text-primary);
    }

    .event-styles {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
      margin-bottom: 1rem;
    }

    .style-tag {
      padding: 0.25rem 0.75rem;
      background: linear-gradient(135deg, var(--primary), var(--secondary));
      border-radius: 1rem;
      font-size: 0.75rem;
      font-weight: 700;
      color: white;
      text-transform: uppercase;
    }

    .badge {
      padding: 0.25rem 0.625rem;
      border-radius: 0.5rem;
      font-size: 0.75rem;
      font-weight: 600;
    }

    .badge-free {
      background: #e8f5e9;
      color: #2e7d32;
      border: 1px solid #a5d6a7;
    }

    .badge-lessons {
      background: #fff3e0;
      color: #e65100;
      border: 1px solid #ffcc80;
    }

    .event-meta {
      display: grid;
      gap: 0.5rem;
      margin: 1rem 0;
      font-size: 0.875rem;
      color: var(--text-secondary);
    }

    .event-meta-item {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .event-description {
      display: none; /* Masquer sur desktop car elle est √† gauche */
    }

    .event-footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding-top: 1rem;
      border-top: 1px solid var(--border);
    }

    .event-price {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--primary);
    }

    .event-cta {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.75rem 1.5rem;
      background: linear-gradient(135deg, var(--primary), var(--secondary));
      color: white;
      text-decoration: none;
      border-radius: 2rem;
      font-weight: 600;
      font-size: 0.875rem;
      transition: all 0.3s;
    }

    .event-cta:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px var(--primary-glow);
    }

    /* SCROLLBAR */
    .events-section::-webkit-scrollbar {
      width: 8px;
    }

    .events-section::-webkit-scrollbar-track {
      background: var(--bg-light);
    }

    .events-section::-webkit-scrollbar-thumb {
      background: #ddd;
      border-radius: 4px;
    }

    .events-section::-webkit-scrollbar-thumb:hover {
      background: #ccc;
    }

    /* LEAFLET POPUP */
    .leaflet-popup-content-wrapper {
      background: white !important;
      color: #1a1a1a !important;
      border-radius: 1rem !important;
      padding: 0 !important;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15) !important;
      border: 1px solid #e0e0e0 !important;
    }

    .leaflet-popup-content {
      margin: 0 !important;
      padding: 1rem !important;
      font-family: 'DM Sans', sans-serif !important;
    }

    .leaflet-popup-tip {
      background: white !important;
      border: 1px solid #e0e0e0 !important;
    }

    .leaflet-popup-close-button {
      color: #666 !important;
    }

    /* FOOTER */
    footer {
      background: var(--bg-card);
      border-top: 1px solid var(--border);
      padding: 0.75rem 1rem;
      margin-top: auto;
    }

    .footer-content {
      max-width: 1400px;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 2rem;
    }

    .footer-brand {
      flex: 1;
      max-width: 500px;
    }

    .footer-logo {
      font-family: 'Bebas Neue', sans-serif;
      font-size: 1rem;
      letter-spacing: 0.05em;
      background: linear-gradient(135deg, var(--primary), var(--secondary));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      margin-bottom: 0.25rem;
    }

    .footer-description {
      color: var(--text-secondary);
      line-height: 1.3;
      font-size: 0.75rem;
    }

    .footer-section {
      flex-shrink: 0;
    }

    .footer-section h3 {
      font-size: 0.6875rem;
      font-weight: 700;
      margin-bottom: 0.375rem;
      color: var(--text-primary);
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .footer-links {
      list-style: none;
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
    }

    .footer-links li {
      position: relative;
    }

    .footer-links li:not(:last-child)::after {
      content: '‚Ä¢';
      position: absolute;
      right: -0.6rem;
      color: var(--border);
    }

    .footer-links a {
      color: var(--text-secondary);
      text-decoration: none;
      font-size: 0.75rem;
      transition: color 0.2s;
      white-space: nowrap;
    }

    .footer-links a:hover {
      color: var(--primary);
    }

    .footer-bottom {
      max-width: 1400px;
      margin: 0.5rem auto 0;
      padding-top: 0.5rem;
      border-top: 1px solid var(--border);
      text-align: center;
      color: var(--text-secondary);
      font-size: 0.6875rem;
    }

    @media (max-width: 768px) {
      footer {
        padding: 1.5rem 1rem;
      }

      .footer-content {
        flex-direction: column;
        gap: 1.5rem;
        align-items: flex-start;
      }

      .footer-brand {
        max-width: 100%;
        text-align: left;
      }

      .footer-description {
        font-size: 0.875rem;
      }

      .footer-section {
        width: 100%;
      }

      .footer-section h3 {
        font-size: 1rem;
        margin-bottom: 0.75rem;
      }

      .footer-links {
        gap: 0.5rem;
        flex-wrap: wrap;
      }

      .footer-links li {
        font-size: 0.875rem;
      }

      .footer-links li:not(:last-child)::after {
        right: -0.35rem;
      }

      .footer-bottom {
        padding-top: 1rem;
        font-size: 0.8125rem;
      }
    }

    /* RESPONSIVE */
    @media (max-width: 1024px) {
      html, body {
        height: auto;
        overflow: auto;
      }

      .main-container {
        grid-template-columns: 1fr;
        grid-template-rows: auto;
        height: auto;
      }

      .map-section {
        position: relative;
        height: 50vh;
        border-right: none;
        border-bottom: 1px solid var(--border);
      }

      .events-section {
        height: auto;
        overflow-y: visible;
      }
    }

    @media (max-width: 640px) {
      .navbar {
        padding: 0.75rem 1rem;
      }

      .logo {
        font-size: 1.5rem;
      }

      .navbar-brand {
        flex-shrink: 0;
      }

      .tagline {
        display: none;
      }

      /* Masquer les actions desktop, afficher burger */
      .navbar-actions {
        display: none;
      }

      .burger-menu {
        display: flex;
      }

      .filters {
        padding: 1rem 0.5rem;
      }

      .filters-container {
        justify-content: center;
        flex-wrap: wrap;
        padding: 0;
      }

      .filter-chip {
        flex-shrink: 0;
        padding: 0.5rem 0.875rem;
        font-size: 0.8125rem;
      }

      /* Masquer l'indicateur de scroll */
      .filters::after {
        display: none;
      }

      .map-section {
        height: 45vh;
      }

      .events-section {
        padding: 1rem;
      }

      .events-header h2 {
        font-size: 1.5rem;
      }

      .event-card {
        flex-direction: column; /* Vertical sur mobile */
        padding: 0;
      }

      .event-left {
        width: 100%; /* Pleine largeur sur mobile */
      }

      .event-image {
        width: 100%;
        height: 150px;
        border-radius: 1rem 1rem 0 0; /* Coins arrondis en haut seulement */
      }

      .event-description-left {
        display: none; /* Masquer sur mobile */
      }

      .event-description {
        display: block; /* Afficher dans la zone droite sur mobile */
        color: var(--text-secondary);
        line-height: 1.5;
        margin-bottom: 1rem;
        font-size: 0.875rem;
      }

      .event-content {
        padding: 1rem;
      }

      .event-title {
        font-size: 1.125rem;
      }

      .event-meta {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.5rem;
      }

      .event-footer {
        flex-direction: column;
        gap: 0.75rem;
      }

      .event-cta {
        width: 100%;
        text-align: center;
      }

      .map-btn {
        width: 44px;
        height: 44px;
        font-size: 1.25rem;
      }

      .map-controls {
        bottom: 1rem;
        right: 1rem;
      }
    }
  </style>
</head>
<body>
  <!-- HEADER WRAPPER -->
  <div style="position: relative;">
    <!-- NAVBAR -->
    <nav class="navbar">
      <%= link_to events_path, class: "navbar-brand" do %>
        <div class="logo">SalsaSpot</div>
        <span class="tagline">üéµ Trouve ta soir√©e latino</span>
      <% end %>

      <!-- Menu desktop -->
      <div class="navbar-actions">
        <%= link_to discover_path, class: "discover-link" do %>
          ‚ú® D√©couvrir les danses
        <% end %>
        <%= link_to new_event_path, class: "navbar-cta" do %>
          ‚ûï Ajouter une soir√©e
        <% end %>
      </div>

      <!-- Burger mobile -->
      <button class="burger-menu" id="burger-btn">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </nav>

    <!-- Menu mobile d√©roulant -->
    <div class="mobile-menu" id="mobile-menu">
      <div class="mobile-menu-content">
        <%= link_to discover_path, class: "mobile-menu-link" do %>
          <span style="font-size: 1.5rem;">‚ú®</span>
          <span>D√©couvrir les danses</span>
        <% end %>
        <%= link_to new_event_path, class: "mobile-menu-link primary" do %>
          <span style="font-size: 1.5rem;">‚ûï</span>
          <span>Ajouter une soir√©e</span>
        <% end %>
      </div>
    </div>
  </div>

  <!-- FILTRES -->
  <div class="filters">
    <div class="filters-container">
      <button class="filter-chip active" data-style="">üåç Toutes</button>
      <button class="filter-chip" data-style="salsa">üíÉ Salsa</button>
      <button class="filter-chip" data-style="bachata">üï∫ Bachata</button>
      <button class="filter-chip" data-style="kizomba">‚ù§Ô∏è Kizomba</button>
      <button class="filter-chip" data-free="true">üí∏ Gratuit</button>
      <button class="filter-chip" data-lessons="true">üìö Cours</button>
    </div>
  </div>

  <!-- MAIN -->
  <div class="main-container">
    <!-- CARTE -->
    <div class="map-section">
      <div id="map"></div>
      <div class="map-controls">
        <button class="map-btn" id="locate-btn">üìç</button>
      </div>
    </div>

    <!-- LISTE -->
    <div class="events-section">
      <div class="events-header">
        <h2>Soir√©es √† venir</h2>
        <span class="events-count"><%= @events.size %> √©v√©nements</span>
      </div>

      <div class="events-grid">
        <% if @events.any? %>
          <% @events.each do |event| %>
            <div class="event-card"
                 data-event-id="<%= event.id %>"
                 data-lat="<%= event.latitude %>"
                 data-lng="<%= event.longitude %>">

              <%# Zone gauche : Photo + Description %>
              <div class="event-left">
                <%# Photo de l'√©v√©nement %>
                <% if event.photos.attached? %>
                  <div class="event-image" style="background-image: url(<%= url_for(event.photos.first) %>)"></div>
                <% else %>
