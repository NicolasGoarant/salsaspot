    .audience-card:hover {
      transform: translateY(-8px) scale(1.02);
      border-color: var(--primary);
      box-shadow: var(--shadow-strong);
    }

    .audience-emoji {
      font-size: 4rem;
      margin-bottom: 1.5rem;
      display: block;
      transition: transform 0.3s;
    }

    .audience-card:hover .audience-emoji {
